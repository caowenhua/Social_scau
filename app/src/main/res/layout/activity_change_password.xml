<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <org.social.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_text="修改密码"
        app:right_visible="false"
        android:id="@+id/titlebar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="旧密码"
        android:textColor="@color/text_deep"
        android:textSize="@dimen/text_xs"
        android:layout_below="@+id/titlebar"
        android:id="@+id/old_password"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:id="@+id/edt_old_password"
        android:layout_below="@+id/old_password"
        android:textSize="@dimen/text"
        android:maxLength="12"
        android:textColor="@color/text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_main_white_con"
        android:password="true"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="新密码 (6 - 12个字符)"
        android:textColor="@color/text_deep"
        android:textSize="@dimen/text_xs"
        android:layout_below="@+id/edt_old_password"
        android:id="@+id/new_password_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:id="@+id/edt_new_password_1"
        android:layout_below="@+id/new_password_1"
        android:textSize="@dimen/text"
        android:textColor="@color/text"
        android:maxLength="12"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_main_white_con"
        android:password="true"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="再次输入密码"
        android:textColor="@color/text_deep"
        android:textSize="@dimen/text_xs"
        android:layout_below="@+id/edt_new_password_1"
        android:id="@+id/new_password_2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:id="@+id/edt_new_password_2"
        android:layout_below="@+id/new_password_2"
        android:textSize="@dimen/text"
        android:maxLength="12"
        android:textColor="@color/text"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_main_white_con"
        android:password="true"
        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        />


    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:padding="3dp"
        android:text=""
        android:textColor="@color/red_deep"
        android:textSize="@dimen/text_s"
        android:gravity="center"
        android:layout_below="@+id/edt_new_password_2"
        android:id="@+id/tv_show_tips"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="90dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/selector_bg_main_con"
        android:text="修改"
        android:textColor="@color/white"
        android:textSize="@dimen/text"
        android:id="@+id/btn_change_password"
        android:layout_below="@+id/tv_show_tips"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_marginLeft="130dp"
        />

</RelativeLayout>
