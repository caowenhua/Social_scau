<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <org.social.widget.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_text="个人资料"
        app:right_text="编辑"
        android:id="@+id/titlebar"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/blur"
        android:layout_below="@+id/titlebar"
        android:layout_above="@+id/rlt_new"
        />
    
    <org.social.widget.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/img_head"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/titlebar"
        android:layout_marginTop="20dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_follow"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:background="@drawable/selector_bg_main_con"
        android:textSize="@dimen/text"
        android:textColor="@color/white"
        android:layout_below="@+id/titlebar"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:textSize="@dimen/text_xl"
        android:textColor="@color/text_deep"
        android:singleLine="true"
        android:maxLength="20"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_head"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_gender"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_alignTop="@+id/tv_name"
        android:layout_marginLeft="10dp"
        />

    <View
        android:layout_width="1px"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_name"
        android:background="@color/main"
        android:layout_marginTop="15dp"
        android:id="@+id/view"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注  3"
        android:textColor="@color/text"
        android:textSize="@dimen/text"
        android:layout_below="@+id/tv_name"
        android:layout_toLeftOf="@+id/view"
        android:id="@+id/tv_focus"
        android:padding="20dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝  3"
        android:textColor="@color/text"
        android:textSize="@dimen/text"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/view"
        android:id="@+id/tv_fan"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="@dimen/text_s"
        android:layout_below="@+id/tv_focus"
        android:id="@+id/tv_sign"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="@dimen/text_s"
        android:layout_below="@+id/tv_sign"
        android:id="@+id/tv_phone"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="@dimen/text_s"
        android:layout_below="@+id/tv_phone"
        android:id="@+id/tv_mail"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/tv_mail"
        android:background="@drawable/selector_bg_f9_2_e5"
        android:id="@+id/rlt_new"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text"
            android:textColor="@color/text_deep"
            android:singleLine="true"
            android:text="动态"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_shadow"
        android:layout_above="@+id/rlt_new"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_shadow"
        android:layout_below="@+id/rlt_new"
        />

</RelativeLayout>
